@model List<PetStuff.Web.Models.BrandViewModel>
@{
    ViewData["Title"] = "Brands";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-stars me-2"></i>Brands</h2>
        <p class="text-muted">Browse products by brand</p>
    </div>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var brand in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 product-card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-star me-2 text-warning"></i>@brand.Name
                        </h5>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-info">@brand.ProductCount Products</span>
                            <a href="@Url.Action("Brand", "Products", new { brandId = brand.Id })" class="btn btn-info btn-sm text-white">
                                View Products <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>No brands found.
            </div>
        </div>
    }
</div>

