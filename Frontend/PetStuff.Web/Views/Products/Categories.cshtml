@model List<PetStuff.Web.Models.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-tags me-2"></i>Categories</h2>
        <p class="text-muted">Browse products by category</p>
    </div>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 product-card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-tag me-2 text-primary"></i>@category.Name
                        </h5>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="card-text text-muted">@category.Description</p>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-primary">@category.ProductCount Products</span>
                            <a href="@Url.Action("Category", "Products", new { categoryId = category.Id })" class="btn btn-primary btn-sm">
                                View Products <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>No categories found.
            </div>
        </div>
    }
</div>

