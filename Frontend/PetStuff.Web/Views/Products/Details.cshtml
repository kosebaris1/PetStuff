@model PetStuff.Web.Models.ProductViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="mb-3">
    <a asp-action="Index" class="text-decoration-none">
        <i class="bi bi-arrow-left"></i> Back to Products
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            @if (Model.ImageUrls != null && Model.ImageUrls.Any())
            {
                <img src="@Model.ImageUrls.First()" class="card-img-top" alt="@Model.Name" style="max-height: 500px; object-fit: contain; background: #f8f9fa;" />
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                    <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="mb-3">
                    @if (Model.Category != null)
                    {
                        <span class="badge bg-secondary me-2">@Model.Category.Name</span>
                    }
                    @if (Model.Brand != null)
                    {
                        <span class="badge bg-info">@Model.Brand.Name</span>
                    }
                </div>
                
                <h1 class="fw-bold mb-3">@Model.Name</h1>
                
                <div class="mb-4">
                    <span class="h2 text-primary fw-bold">$@Model.Price.ToString("F2")</span>
                </div>
                
                <div class="mb-4">
                    @if (Model.Stock > 0)
                    {
                        <span class="badge bg-success mb-2">
                            <i class="bi bi-check-circle"></i> In Stock (@Model.Stock available)
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger mb-2">
                            <i class="bi bi-x-circle"></i> Out of Stock
                        </span>
                    }
                </div>
                
                <hr />
                
                <h5 class="fw-bold mb-3">Description</h5>
                <p class="text-muted">@(Model.Description ?? "No description available.")</p>
                
                <hr />
                
                @if (Model.Stock > 0)
                {
                    <form id="addToBasketForm" class="mt-4">
                        <input type="hidden" id="productId" value="@Model.Id" />
                        <input type="hidden" id="productName" value="@Model.Name" />
                        <input type="hidden" id="productPrice" value="@Model.Price" />
                        <input type="hidden" id="productImageUrl" value="@(Model.ImageUrls != null && Model.ImageUrls.Any() ? Model.ImageUrls.First() : "")" />
                        <div class="mb-3">
                            <label for="quantity" class="form-label fw-bold">Quantity</label>
                            <div class="input-group" style="max-width: 200px;">
                                <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('quantity').stepDown()">-</button>
                                <input type="number" id="quantity" name="quantity" class="form-control text-center" value="1" min="1" max="@Model.Stock" />
                                <button class="btn btn-outline-secondary" type="button" onclick="document.getElementById('quantity').stepUp()">+</button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-cart-plus me-2"></i>Add to Basket
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg w-100" disabled>
                        <i class="bi bi-x-circle me-2"></i>Out of Stock
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('addToBasketForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const productId = document.getElementById('productId').value;
            const quantity = parseInt(document.getElementById('quantity').value);
            const token = localStorage.getItem('accessToken');
            
            if (!token) {
                alert('Please login to add items to basket.');
                window.location.href = '/Account/Login';
                return;
            }
            
            try {
                // Sayfadaki hidden input'lardan ürün bilgilerini al
                const productName = document.getElementById('productName').value;
                const productPrice = parseFloat(document.getElementById('productPrice').value);
                const productImageUrl = document.getElementById('productImageUrl').value;
                
                // Sepete ekle - tüm gerekli bilgilerle
                const response = await fetch('https://localhost:7192/api/basket/items', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        ProductId: parseInt(productId),
                        ProductName: productName,
                        Price: productPrice,
                        Quantity: quantity,
                        ProductImageUrl: productImageUrl || null
                    })
                });
                
                if (response.ok) {
                    alert('Product added to basket successfully!');
                    // Optionally redirect to basket
                    // window.location.href = '/Basket';
                } else {
                    const errorText = await response.text();
                    alert('Failed to add product to basket: ' + errorText);
                }
            } catch (error) {
                console.error('Error adding to basket:', error);
                alert('An error occurred while adding the product to basket.');
            }
        });
    </script>
}
