@model List<PetStuff.Web.Models.ProductListViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold"><i class="bi bi-box-seam text-primary"></i> Our Products</h2>
    <div class="input-group" style="max-width: 300px;">
        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
        <input type="text" class="form-control" id="searchInput" placeholder="Search products...">
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card product-card h-100 shadow-sm">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(product.MainImageUrl))
                        {
                            <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name" style="height: 220px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 220px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        @if (product.Stock > 0)
                        {
                            <span class="badge bg-success position-absolute top-0 end-0 m-2">
                                <i class="bi bi-check-circle"></i> In Stock
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                <i class="bi bi-x-circle"></i> Out of Stock
                            </span>
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@product.Name</h5>
                        <div class="mb-2">
                            @if (!string.IsNullOrEmpty(product.CategoryName))
                            {
                                <span class="badge bg-secondary me-1">@product.CategoryName</span>
                            }
                            @if (!string.IsNullOrEmpty(product.BrandName))
                            {
                                <span class="badge bg-info">@product.BrandName</span>
                            }
                        </div>
                        <div class="mt-auto">
                            <p class="card-text mb-2">
                                <span class="h4 text-primary fw-bold">$@product.Price.ToString("F2")</span>
                            </p>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100">
                                <i class="bi bi-eye me-1"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info shadow-sm">
        <i class="bi bi-info-circle me-2"></i>No products found. Please check back later!
    </div>
}

@section Scripts {
    <script>
        document.getElementById('searchInput')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.product-card');
            cards.forEach(card => {
                const title = card.querySelector('.card-title').textContent.toLowerCase();
                const parent = card.closest('.col-md-4, .col-lg-3');
                if (title.includes(searchTerm)) {
                    parent.style.display = '';
                } else {
                    parent.style.display = 'none';
                }
            });
        });
    </script>
}

