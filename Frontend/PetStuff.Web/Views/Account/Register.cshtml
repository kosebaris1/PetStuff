@model PetStuff.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-5 col-lg-4">
        <div class="card" style="border-radius: 24px; border: none; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="mb-4" style="width: 80px; height: 80px; margin: 0 auto; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 10px 25px rgba(99, 102, 241, 0.3);">
                        <i class="bi bi-person-plus text-white" style="font-size: 2.5rem;"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Create Account</h2>
                    <p class="text-muted">Join us and start shopping today</p>
                </div>
                
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 12px;"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-semibold mb-2">
                            <i class="bi bi-person me-2"></i>Username
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Choose a username" style="padding: 0.875rem 1rem;" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold mb-2">
                            <i class="bi bi-envelope me-2"></i>Email
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" style="padding: 0.875rem 1rem;" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-semibold mb-2">
                            <i class="bi bi-person-badge me-2"></i>Full Name
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" style="padding: 0.875rem 1rem;" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label fw-semibold mb-2">
                            <i class="bi bi-lock me-2"></i>Password
                        </label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" style="padding: 0.875rem 1rem;" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg py-3" style="font-weight: 600;">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Already have an account? 
                            <a asp-action="Login" class="text-decoration-none fw-semibold" style="color: #6366f1;">
                                Sign In
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

