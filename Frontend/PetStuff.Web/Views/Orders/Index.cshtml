@model List<PetStuff.Web.Models.OrderViewModel>
@{
    ViewData["Title"] = "My Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold"><i class="bi bi-receipt text-primary"></i> My Orders</h2>
    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-1"></i>Continue Shopping
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <strong class="text-primary">Order #@order.Id</strong>
                        @{
                            var statusClass = order.Status switch
                            {
                                "Pending" => "bg-warning text-dark",
                                "Confirmed" or "Processing" => "bg-info",
                                "Shipped" => "bg-primary",
                                "Delivered" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @statusClass">@order.Status</span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted d-block">
                                <i class="bi bi-calendar me-1"></i>@order.OrderDate.ToString("dd MMM yyyy HH:mm")
                            </small>
                            <small class="text-muted d-block mt-1">
                                <i class="bi bi-geo-alt me-1"></i>@order.ShippingAddress, @order.ShippingCity
                            </small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Total:</span>
                            <strong class="h5 text-primary mb-0">$@order.TotalPrice.ToString("F2")</strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-box me-1"></i>@order.Items.Count item(s)
                            </small>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye me-1"></i>View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">No orders yet</h4>
            <p class="text-muted">Start shopping to see your orders here!</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-arrow-right-circle me-2"></i>Start Shopping
            </a>
        </div>
    </div>
}

