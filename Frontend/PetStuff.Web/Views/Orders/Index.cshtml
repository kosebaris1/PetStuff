@model List<PetStuff.Web.Models.OrderViewModel>
@{
    ViewData["Title"] = "My Orders";
}

<div class="d-flex justify-content-between align-items-center mb-5 fade-in" style="flex-wrap: wrap; gap: 1rem;">
    <div>
        <h2 class="fw-bold mb-1" style="font-size: 2.25rem;">
            <i class="bi bi-receipt me-2" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;"></i>My Orders
        </h2>
        <p class="text-muted mb-0">View and track your order history</p>
    </div>
    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary px-4 py-2">
        <i class="bi bi-arrow-left me-2"></i>Continue Shopping
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
        {
            <div class="col-md-6 col-lg-4 fade-in">
                <div class="card h-100" style="border-radius: 20px;">
                    <div class="card-header border-0 bg-white d-flex justify-content-between align-items-center pt-4 px-4">
                        <strong class="fs-5" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                            Order #@order.Id
                        </strong>
                        @{
                            var statusClass = order.Status switch
                            {
                                "Pending" => "bg-warning text-dark",
                                "Confirmed" or "Processing" => "bg-info",
                                "Shipped" => "bg-primary",
                                "Delivered" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @statusClass" style="padding: 0.5rem 0.875rem; font-weight: 600;">@order.Status</span>
                    </div>
                    <div class="card-body px-4 pb-4">
                        <div class="mb-3">
                            <small class="text-muted d-block mb-2">
                                <i class="bi bi-calendar me-2"></i>@order.OrderDate.ToString("dd MMM yyyy HH:mm")
                            </small>
                            <small class="text-muted d-block">
                                <i class="bi bi-geo-alt me-2"></i>@order.ShippingAddress, @order.ShippingCity
                            </small>
                        </div>
                        <hr style="opacity: 0.2;">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted fw-semibold">Total:</span>
                            <strong class="h5 mb-0" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                                $@order.TotalPrice.ToString("F2")
                            </strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-box me-1"></i>@order.Items.Count item(s)
                            </small>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary px-3">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card fade-in" style="border-radius: 20px; background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);">
        <div class="card-body text-center py-5">
            <div class="mb-4" style="width: 120px; height: 120px; margin: 0 auto; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 15px 35px rgba(99, 102, 241, 0.3);">
                <i class="bi bi-inbox text-white" style="font-size: 4rem;"></i>
            </div>
            <h3 class="fw-bold mb-2">No orders yet</h3>
            <p class="text-muted fs-5 mb-4">Start shopping to see your orders here!</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3">
                <i class="bi bi-arrow-right-circle me-2"></i>Start Shopping
            </a>
        </div>
    </div>
}

