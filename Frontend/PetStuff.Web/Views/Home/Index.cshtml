@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold"><i class="bi bi-heart-pulse-fill text-primary"></i> Welcome to PetStuff</h1>
    <p class="lead">Your one-stop shop for all pet products!</p>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    @if (User.IsInRole("Admin"))
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="bi bi-shield-check text-primary" style="font-size: 4rem;"></i>
                <h3 class="mt-3">Welcome, Admin!</h3>
                <p class="text-muted">Manage your products and store settings</p>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-box-seam me-2"></i>Go to Admin Panel
                </a>
            </div>
        </div>
    }
    else
    {
        @if (ViewBag.Products != null && ((List<PetStuff.Web.Models.ProductListViewModel>)ViewBag.Products).Any())
        {
            <h3 class="mb-4"><i class="bi bi-star-fill text-warning"></i> Featured Products</h3>
            <div class="row g-4">
                @foreach (var product in (List<PetStuff.Web.Models.ProductListViewModel>)ViewBag.Products)
                {
                    <div class="col-md-4 col-lg-3">
                        <div class="card product-card shadow-sm h-100">
                            @if (!string.IsNullOrEmpty(product.MainImageUrl))
                            {
                                <img src="@product.MainImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@product.Name</h5>
                                <p class="card-text">
                                    <span class="h5 text-primary fw-bold">$@product.Price.ToString("F2")</span>
                                </p>
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary mt-auto">
                                    <i class="bi bi-eye me-1"></i>View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-right-circle me-2"></i>View All Products
                </a>
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <i class="bi bi-box-seam text-primary" style="font-size: 4rem;"></i>
                    <h3 class="mt-3">Welcome!</h3>
                    <p class="text-muted">Browse our amazing collection of pet products.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Products
                    </a>
                </div>
            </div>
        }
    }
}
else
{
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <i class="bi bi-person-plus text-primary" style="font-size: 4rem;"></i>
                    <h3 class="mt-3">Get Started</h3>
                    <p class="text-muted">Please login or register to start shopping!</p>
                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Sign Up
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

